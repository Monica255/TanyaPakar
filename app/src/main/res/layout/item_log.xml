<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="@dimen/margin_item_with_ds"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="@dimen/margin_layout_with_ds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/dark_green"
                android:id="@+id/tv_date"
                android:layout_marginTop="@dimen/margin_item_with_ds"
                android:maxLines="2"
                style="@style/SmallText"
                android:text="25/05/2024 15:45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_file_name"
                style="@style/TitleText"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_item_with_ds"
                android:maxLines="2"
                android:text="log bulan ini.pdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_description"
                android:layout_marginTop="@dimen/margin_item_with_ds"
                android:maxLines="2"
                android:text="Deskripsi log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/btn_delete"
            android:src="@drawable/icon_delete"
            android:layout_marginEnd="@dimen/margin_start_end"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>